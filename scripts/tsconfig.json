{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../dist",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES6"
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "buildOnSave": false
}
